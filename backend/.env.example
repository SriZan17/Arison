# Environment variables for CMD Transparency Platform

# PostgreSQL Database Configuration
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cmd_transparency

# Alternative: Full database URLs (if you prefer to set the complete URL)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/cmd_transparency
# ASYNC_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/cmd_transparency

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads/reviews

# Security (for future use)
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30